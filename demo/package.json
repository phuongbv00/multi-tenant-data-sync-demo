{
  "name": "multi-tenant-sync-demo",
  "version": "1.0.0",
  "description": "Multi-tenant Data Sync Demo - Implementing LLD Tenant Isolation & Data Sync",
  "workspaces": [
    "source-service",
    "consumer-service"
  ],
  "scripts": {
    "install:all": "npm install",
    "migrate:source": "npm run migrate --workspace=source-service",
    "migrate:consumer": "npm run migrate --workspace=consumer-service",
    "migrate:all": "npm run migrate:source && npm run migrate:consumer",
    "start:source": "npm run dev --workspace=source-service",
    "start:consumer": "npm run dev --workspace=consumer-service",
    "start:all": "concurrently \"npm run start:source\" \"npm run start:consumer\"",
    "test": "jest",
    "test:unit": "jest --testPathPattern=unit",
    "test:integration": "RUN_INTEGRATION_TESTS=1 jest --testPathPattern=integration",
    "docker:up": "docker-compose up -d",
    "docker:down": "docker-compose down"
  },
  "devDependencies": {
    "@types/jest": "^29.5.11",
    "concurrently": "^8.2.2",
    "jest": "^29.7.0",
    "nodemon": "^3.1.11",
    "ts-jest": "^29.1.1",
    "ts-node": "^10.9.2",
    "typescript": "^5.3.2"
  }
}
